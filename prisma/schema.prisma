generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recommendation {
  id         Int      @id @default(autoincrement())
  animeId    Int
  title      String
  imageUrl   String
  mood       String
  userId     String?
  note       String?
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
}
