generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recommendation {
  id         Int      @id @default(autoincrement())
  animeId    Int
  title      String
  imageUrl   String
  mood       String
  synopsis   String? 
  userId     String?
  note       String?
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model AnimeCache {
  id        Int      @id @default(autoincrement())
  animeId   Int      @unique
  title     String
  imageUrl  String
  synopsis  String?
  createdAt DateTime @default(now())
}

model AnimeSeen {
  id        Int      @id @default(autoincrement())
  animeId   Int
  userId    String
  createdAt DateTime @default(now())

  @@unique([animeId, userId]) // un anime ne peut être vu qu’une fois par user
}